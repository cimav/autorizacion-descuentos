<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCimav"
        android:src="@drawable/logo_cimavhd"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_sign_in"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imgCimav"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <LinearLayout tools:context="com.example.geovany.cimav_peticiones.Prueba_para_login"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:background="#eeeeee"
        android:visibility="gone"
        android:id="@+id/profile_layout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:background="#042333" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NAME"
                android:id="@+id/textView_name"
                android:textSize="28sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:textIsSelectable="false"
                android:autoText="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#888888"></FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#094E73"
            android:padding="10dp"
            android:layout_weight="0.11">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView_profile_image"
                android:layout_below="@+id/textView_name"
                android:layout_alignLeft="@+id/textView_name"
                android:layout_alignStart="@+id/textView_name"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dddddd"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/powered_by_google_light"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/textView_email"
                android:textAlignment="viewStart"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="0.17" >

            <Button
                android:layout_width="162dp"
                android:layout_height="70dp"
                android:text="Continuar"
                android:id="@+id/button_continue"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/button_logout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/my_button_selector_green"
                android:textColor="#ffffff" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.27" >

            <Button
                android:layout_width="162dp"
                android:layout_height="70dp"
                android:text="LogOut"
                android:id="@+id/button_logout"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/my_button_selector_red"
                android:layout_gravity="center" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
